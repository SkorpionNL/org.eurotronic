	"flow": {
		"triggers": [
			{
				"id": "euro_mode_changed",
				"title": {
					"en": "Thermostat mode changed",
					"nl": "Thermostaat modus is veranderd"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=comet_zwave"
					}
				],
				"tokens": [
					{
						"name": "mode",
						"title": {
							"en": "Mode"
						},
						"example": {
							"en": "Heat"
						}
					}
				]
			},
			{
				"id": "euro_mode_changed_to",
				"title": {
					"en": "Thermostat mode changed to",
					"nl": "Thermostaat modus is veranderd naar"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=comet_zwave"
					},
					{
						"name": "mode",
						"type": "dropdown",
						"values": [
							{
								"id": "Off",
								"label": {
									"en": "Off (6°C)",
									"nl": "Uit (6°C)"
