						"id": "picker",
						"capabilities": [
							"eurotronic_mode"
						]
					},
					{
						"id": "sensor",
						"capabilities": [
							"measure_temperature"
						]
					},
					{
						"id": "thermostat",
						"capabilities": [
							"target_temperature"
						]
					}
				]
			},
			"images": {
				"large": "/drivers/comet_zwave/assets/images/large.png",
