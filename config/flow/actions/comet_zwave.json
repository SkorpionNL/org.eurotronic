[
  {
    "id": "comet_set_euro_mode",
    "title": {
      "en": "Set thermostat mode",
      "nl": "Zet thermostaat modus"
    },
    "hint": {
      "en": "Set the mode of the thermostatic",
      "nl": "Zet de modus van de thermostaat kraan"
    },
    "args": [
      {
        "name": "device",
        "type": "device",
        "filter": "driver_id=comet_zwave"
      },
      {
        "name": "euro_mode",
        "type": "dropdown",
        "values": [
          {
            "id": "Off",
            "label": {
              "en": "Off (6°C)",
              "nl": "Uit (6°C)"
            }
          },
          {
            "id": "Heat",
            "label": {
              "en": "Comfortable",
              "nl": "Comfortabel"
            }
          },
          {
            "id": "Energy Save Heat",
            "label": {
              "en": "Economic",
              "nl": "Economische"
            }
          },
          {
            "id": "MANUFACTURER SPECIFC",
            "label": {
              "en": "Manual",
              "nl": "Handmatig"
            }
          }
        ]
      }
    ]
  },
  {
    "id": "comet_eco_temperature",
    "title": {
      "en": "Set eco temperature",
      "nl": "Zet eco temperatuur"
    },
    "hint": {
      "en": "This sets the Economy temperature and thermostat mode",
      "nl": "Dit zet de Economie temperatuur en thermostaat mode"
    },
    "args": [
      {
        "name": "device",
        "type": "device",
        "filter": "driver_id=comet_zwave"
      },
      {
        "name": "temperature",
        "type": "range",
        "min": 6,
        "max": 28,
        "step": 0.5,
        "label": "&deg;C"
      }
    ]
  },
  {
    "id": "comet_manual_control",
    "title": {
      "en": "Set thermostatic position",
      "nl": "Zet thermostaatkraan postitie"
    },
    "hint": {
      "en": "This will set the manual thermostatic's valve position.\n0 = fully closed, 100 = fully open.",
      "nl": "Dit zet de Handmatige postitie van de thermostaatkraan.\n0 = volledig gesloten, 100 = volledig open."
    },
    "args": [
      {
        "name": "device",
        "type": "device",
        "filter": "driver_id=comet_zwave"
      },
      {
        "name": "value",
        "type": "range",
        "min": 0,
        "max": 1,
        "step": 0.01,
        "label": "%",
        "labelMultiplier": 100,
        "labelDecimals": 2
      }
    ]
  }
]
